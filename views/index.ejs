        for (let i = 0; i < hide.length; i++) {
            document.getElementById(hide[i] + "-btn").style.backgroundColor = "transparent";
            document.getElementById(hide[i]).style.display = "none";
        }
        document.getElementById(container + "-btn").style.backgroundColor = "#3f77bc"
        document.getElementById(container).style.display = "block";
    }
